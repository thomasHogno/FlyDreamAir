<%- include('header'); %>
<style>
:root{
    --primaryColor: #333;
    --primaryColorDark: #0056b3;
    --textDark: #0f172a;
    --textLight: #64748b;
    --extraLight: #f1f5f9;
    --maxWidth: 1200px;
}

*{
    padding: 10;
    margin: 0;
    box-sizing: border-box;
}

.btn{
    padding: .75rem 2rem;
    outline: none;
    border: none;
    font-size: 1rem;
    font-weight: 500;
    color: white;
    background-color: var(--primaryColor);
    border-radius: 2rem;
    cursor: pointer;
    transition: 0.3s;
}

.btn:hover{
    background-color: var(--primaryColorDark);
}

body{
    font-family: Arial, sans-serif;
}

.main-body{
    position: relative;
    display: block;
    width: 100%;
    flex-wrap: nowrap;
    flex-direction: column;
}

.main-body img{
    display: block;
    object-fit: fill;
    width: 100%;
    height: 350px;
}

.text-overlay {
    position: absolute;
    top: 25%;
    left: 25%; 
    transform: translate(-50%, -50%);
    text-align: left; 
}

.text-overlay h1 {
    font-size: 3rem;
    font-weight: 600;
    line-height: 3rem;
    margin-bottom: 1rem;
}

.booking-container{
    position: absolute;
    top: 292px;
    left: 50%;
    width: 1200px;
    box-shadow: 5px 5px 30px hwb(224 47% 45% / 0.966);
    transform: translateX(-50%);
}

.booking-container p{
    padding: 20px 0 20px 20px;
    font-weight: 500;
    color: var(--textDark);
}

.book-trip{
    width: 100%;
    margin: auto;
    display: flex;
    align-items: center;
    background-color: var(--extraLight);
}

.book-trip span{
    flex: 1;
    padding: 1rem 2rem;
    font-weight: 500;
    text-align: center;
    border-radius: 5px;
    cursor: pointer;
}

.book-trip span:nth-child(1){
    color: #fff;
    background-color: var(--primaryColor);
}

.flight-type p {
    margin-right: 50%;
    display: inline-block;
}

.flight-type span {
    margin-right: 40px;
    display: inline-block;
}

.flight-type input[type="radio"] {
    margin-right: 10px;
}

.line{
    margin-left: 20px;
    margin-right: 20px;
}

.booking-container .form-row{
    margin-top: 4 rem;
    display: grid;
    grid-template-columns: repeat(4,1fr) auto;
    gap: 1rem;
    padding: 0 20px;
}

.booking-container .input-content{
    margin-top: 20px;
    width: 100%;
    display: inline-block;
}

.booking-container .form-group{
    align-items: center;
    gap: 1rem;
    display: inline-flex;
    margin: auto 25px;
    /* display: flex; */
}

.booking-container .input-group{
    width: 100%;
    position: relative;
}

.booking-container label{
    position: absolute;
    top: 0;
    left: 0;
    font-size: 0.8rem;
    font-weight: 400;
    color: var(--textDark);
    transform: translateY(-50%);
    pointer-events: none;
    transform: 0.3s;
}

form input{
    width: 100%;
    padding: 10px 0;
    padding-top: 20px;
    font-size: 1rem;
    outline: none;
    border: none;
    border-bottom: 1px solid var(--primaryColor);
    color: var(--textDark);
}

.booking-container .form-group p{
    margin-top: 0.5rem;
    font-size: 0.8rem;
    padding-top: 10px;;
    color: var(--textLight);
}

.booking-container .btn{
    margin-top: 20px;
    padding: 1rem;
    font-size: 1.5rem;
    height: 70px;
}

/* Style the dropdown box */
select {
    padding: 8px;
    font-size: 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    width: 100%;
    height: 50px;
}

.booking-container select option {
    padding: 8px;
}

.booking-container button i{
    padding: 5px;
    font-size: 1.5rem;
    color: white;
    border-radius: 1rem;
}

.booking-container .btn{
    margin-top: 30px;
    margin-left: 30%;
    width: 90px;
    height: 60px;
}

.trendings-container{
    position: absolute;
    top: 680px;
    width: 1200px;
    left: 50%;
    transform: translateX(-50%);
    padding-bottom: 200px;
}

.trendings-section{
    border: none;
    width: 100%;
}

.trendings{
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 20px;
}

.trendings-container h1{
    margin-top: 0;
    font-weight: 400;
    padding: 20px 0;
}

.trendings-container h1 span{
    text-decoration: underline;
}

.item {
    background-color: #f0f0f0;
    border-radius: 100px;
    overflow: hidden;
    box-shadow: 5px 5px 30px hwb(225 73% 11% / 0.966);
    margin-bottom: 30px;
}

.destination-info {
    padding: 20px;
}

.destination-info h3 {
    margin-bottom: 10px;
    font-size: 1.2rem;
    font-weight: 500;
    color: #333;
}

.destination-info p {
    margin-bottom: 10px;
    font-size: 1rem;
    color: #666;
}

.destination-info p span {
    color:rgb(37, 37, 37);
    font-weight: 500;
}
</style>
