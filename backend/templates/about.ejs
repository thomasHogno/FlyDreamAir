        font-size: 18px;
        color: #555;
        margin-bottom: 40px;
    }

    .slideshow-container {
        position: relative;
        max-width: 1000px;
        margin: auto;
    }

    .aboutSlides {
        display: none;
    }
    
    .message-btn {
        text-decoration: none;
        border: 5px solid #333;
        background-color: #333;
        color: white;
        border-radius: 3px;
}
    .prev, .next {
        cursor: pointer;
        position: absolute;
        top: 50%;
        width: auto;
        padding: 16px;
        margin-top: -22px;
        color: white;
        font-weight: bold;
        font-size: 20px;
        transition: 0.6s ease;
        border-radius: 0 3px 3px 0;
